# start a terminal
bindsym $mod+t exec "kitty"
# bindsym $mod+t exec konsole

# kill focused window
bindsym $mod+Shift+q kill

# rofi
bindsym $mod+d exec "rofi -combi-modi drun,run,window,ssh -mesg -show combi -modi combi"

# suspending
bindsym $mod+b exec systemctl suspend
# start dmenu (a program launcher)
